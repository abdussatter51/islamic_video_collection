<resources>



    <!-- Base application theme. -->
    <style name="ThemeHome" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_500</item>
        <item name="colorPrimaryDark">@color/color_700</item>
        <item name="colorAccent">@color/color_200</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>



    <!-- Video Player Theme -->
    <style name="ThemeVideoPlayer" parent="Theme.MaterialComponents.BottomSheetDialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_500</item>
        <item name="colorPrimaryDark">@color/color_700</item>
        <item name="colorAccent">@color/color_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Homepage Item Textstyle -->
    <style name="HomepageItemTextStyle" parent="">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textSize">16sp</item>
        <item name="maxLines">2</item>
        <item name="android:gravity">center</item>
    </style>




</resources>
