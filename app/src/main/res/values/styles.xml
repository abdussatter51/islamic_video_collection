<resources>



    <!-- Base application theme. -->
    <style name="ThemeHome" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_500</item>
        <item name="colorPrimaryDark">@color/color_700</item>
        <item name="colorAccent">@color/color_200</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>



    <!-- Video Player Theme -->
    <style name="ThemeVideoPlayer" parent="Theme.MaterialComponents.BottomSheetDialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_500</item>
        <item name="colorPrimaryDark">@color/color_700</item>
        <item name="colorAccent">@color/color_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Homepage Item Textstyle -->
    <style name="HomepageItemTextStyle" parent="">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textSize">16sp</item>
        <item name="maxLines">2</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- MainActivity Layout Item -->
    <style name="MainActivityLayoutStyle" parent="">
        <item name="android:layout_height">211dp</item>
<!--        <item name="android:background">@drawable/shade_rectangle</item>-->
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>



    </style>


</resources>
